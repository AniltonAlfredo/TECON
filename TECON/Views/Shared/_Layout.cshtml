                                            <li><a href="/Home/webHosting">Hospedagem Web</a></li>
                                            <li><a href="/Home/cloudHosting">Hospedagem na Nuvem</a></li>
                                            <li><a href="/Home/vpnHosting">Hospedagem VPN</a></li>
                                            <li><a href="/Home/sharedHosting">Hospedagem Compartilhada</a></li>
                                        </ul>
                                    </li>
                                    <li>
                                        <a href="#">Domínio</a>
                                        <ul class="sub-menu">
                                            <li><a href="/HOME/ComainSearch">Pesquisas de domínios</a></li>
                                            @if (User.Identity.IsAuthenticated)
                                            {
                                                <li><a href="/HOME/AccountManage">Minha conta</a></li>
                                                <li><a href="/HOME/DomainManage">Configurações de domínios</a></li>
                                                <li><a href="/HOME/HostManage">Configurações de Hospedagem</a></li>
                                            }
                                        </ul>
                                    </li>
                                    
                                    <li><a href="/Home/Support">Suporte</a></li>
                                    <li>
                                        <a href="#">Blog</a>
                                        <ul class="sub-menu">
                                            <li><a href="/HOME/Blog">Blog</a></li>
                                            <li><a href="#">single blog</a></li>
                                        </ul>
                                    </li>
                                    <li><a href="/Home/Contact">CONTACTO</a></li>
                                    <li><a href="/Home/About">SOBRE</a></li>
                                </ul>
                            </nav>
                        </div>
                        <div class="col-lg-1 col-md-2 cartCol col-3">
                            <a href="/HOME/Cart" class="cart">
                                <span class="count">3</span>
                                <i class="icofont icofont-cart-alt"></i>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </header>
        
        <!-- ======= 1.01 Header Area ====== -->
        @RenderBody()

        <footer class="secPdngT animated">
            <div class="container">
                <div class="row">
                    <div class="col-md-3">
                        <div class="footerInfo">
